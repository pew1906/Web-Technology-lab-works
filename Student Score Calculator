//script.js
function calculateScore() {
  const webObtained = parseInt(document.getElementById('webObtained').value) || 0;
  const webMax = parseInt(document.getElementById('webMax').value) || 0;

  const seObtained = parseInt(document.getElementById('seObtained').value) || 0;
  const seMax = parseInt(document.getElementById('seMax').value) || 0;

  const dbObtained = parseInt(document.getElementById('dbObtained').value) || 0;
  const dbMax = parseInt(document.getElementById('dbMax').value) || 0;

  const psObtained = parseInt(document.getElementById('psObtained').value) || 0;
  const psMax = parseInt(document.getElementById('psMax').value) || 0;

  const totalObtained = webObtained + seObtained + dbObtained + psObtained;
  const totalMax = webMax + seMax + dbMax + psMax;

  const percentage = totalMax > 0 ? ((totalObtained / totalMax) * 100).toFixed(2) : 0;

  document.getElementById('result').innerHTML = `
    <h2>Results</h2>
    <p><strong>Total Obtained Marks:</strong> ${totalObtained}</p>
    <p><strong>Total Maximum Marks:</strong> ${totalMax}</p>
    <p><strong>Percentage:</strong> ${percentage}%</p>
  `;
}
